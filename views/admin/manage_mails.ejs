<%-include('../partials/admin_header')%>
<!-- sweet alert -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.1.0/dist/sweetalert2.min.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.1.0/dist/sweetalert2.all.min.js"></script>
<!-- / sweet alert -->


  <!-- topbar -->
<div class="container-fluid" style="background-color: rgb(255, 255, 255); height: 100px;">
  <div class="row mt-1">
      <h3 class="content-title card-title mt-3" style="color: #00000098; text-align: center;">MANAGE USERS</h3>
      <p style="color: rgba(0, 0, 0, 0.493); text-align: center;">( BLOCK UNBLOCK AND REMOVE USER )</p>
      <hr>
  </div>
</div>
  <!-- /topbar -->
<section>
  <div class="col-md-12">
    <div class="table-responsive">
      <table class="table table-hover display mt-4">
        <thead>
          <tr>
              <div class="form-check">     
            <th scope="col">No</th>
            <th scope="col">User Id</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Subject</th>
            <th scope="col">Message</th>
            <th scope="col" class="text-center" colspan="2">Actions</th>
              </div>
          </tr>
          <tbody>
            <% mails.forEach(function(data,index){ %>
            <tr>
                <td><%= index+1  %></td>
                <td><%= data.userid %></td>    
                <td><%= data.name %></td>
                <td><%= data.email %></td>
                <td><%= data.subject %></td>
                <td><%= data.message %></td>
                <td>
                <div class="text-center">
                    <a href="https://mail.google.com/" style="background-color: rgba(253, 253, 253, 0.712);" class="btn btn-xs btn-success"><p>Respond</p></a>   
                    <a href="/admin/delete_mail/<%= data._id%>" style="background-color: rgba(253, 253, 253, 0.712);" class="btn btn-xs btn-danger"><p>Delete</p></a>
                </div>
                </td>
            </tr>
            <% })%>
          </tbody>
        </thead>
      </table>
    </div>
  </div>
  <hr>

</section>

<%-include('../partials/admin_footer')%>
