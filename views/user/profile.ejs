<!-- password -->
<script>
  $(document).ready(function() {
    $('#password').on('input', function() {
      validatePassword();
    });

    $('#confirmPassword').on('input', function() {
      validatePassword();
    });
  });

  function validatePassword() {
    var password = $('#password').val();
    var confirmPassword = $('#confirmPassword').val();

    if (password !== confirmPassword) {
      // Passwords do not match
      $('#password').css('border-color', 'red');
      $('#confirmPassword').css('border-color', 'red');
    } else {
      // Passwords match
      $('#password').css('border-color', '');
      $('#confirmPassword').css('border-color', '');

      // Check password strength using your preferred method/library
      var passwordStrength = calculatePasswordStrength(password);

      // Display password strength indicator
      displayPasswordStrength(passwordStrength);
    }
  }

  function calculatePasswordStrength(password) {
    // Implement your own logic to calculate password strength
    // You can use regular expressions, libraries, or your own algorithm

    // Example: Simple length-based strength calculation
    var lengthStrength = password.length / 10; // Assume maximum length is 10 characters
    return Math.floor(lengthStrength * 100);
  }

  function displayPasswordStrength(strength) {
    // Display the password strength indicator based on the strength value
    // Customize this function according to your UI requirements
    var indicatorElement = $('#password-strength-indicator');

    if (strength >= 70) {
      indicatorElement.text('STRONG');
      indicatorElement.css('color', 'green');
    } else if (strength >= 40) {
      indicatorElement.text('MODERATE');
      indicatorElement.css('color', 'orange');
    } else {
      indicatorElement.text('WEAK');
      indicatorElement.css('color', 'red');
    }
  }
</script>

